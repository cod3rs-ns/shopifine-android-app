<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.ProductsFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/productsRecyclerList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:visibility="visible"
        tools:listitem="@layout/item_product" />

    <TextView
        android:id="@+id/noProducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/defaultMarginSide"
        android:text="@string/products_no_items"
        android:textSize="@dimen/fontDisplaySize"
        android:textStyle="bold"
        android:visibility="invisible" />

</FrameLayout>
