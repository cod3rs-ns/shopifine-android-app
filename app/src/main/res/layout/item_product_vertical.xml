<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/paddingListItem">

    <ImageView
        android:id="@+id/recommendedProductImage"
        android:layout_width="@dimen/listItemHeight"
        android:layout_height="@dimen/listItemHeight"
        android:contentDescription="@string/product_image"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recommendedProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="2"
            android:paddingStart="@dimen/paddingListItem"
            android:textSize="@dimen/fontTitleSize"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/recommendedProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="4dp"
            android:gravity="end"
            android:paddingStart="@dimen/paddingListItem"
            android:scrollHorizontally="false"
            android:textSize="@dimen/fontTitleSize"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>
</LinearLayout>

